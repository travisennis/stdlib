{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "composite": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "rewriteRelativeImportExtensions": true,
    "types": ["node"],
    "lib": ["ESNext"]
  },
  "include": ["source/**/*.ts"]
}
